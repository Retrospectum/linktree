---
import "../styles/global.css";
import Head from "../components/Head.astro"
import Button from "../components/Button.astro"
import Footer from "../components/Footer.astro"
---
	<head>
		<meta charset="utf-8">
		<script is:inline src="https://kit.fontawesome.com/2584faf6ae.js" crossorigin="anonymous"></script>
	</head>
	<body>
	<header>
		<Head />
	</header>
	<main>
		<Button>
			<p slot="logo"><a href="https://www.facebook.com/fundacja.impulss"><i class="fa-brands fa-facebook fa-2xl"></i></p></a>
			<p slot="sm-name" class="buttonp1"><a href="https://www.facebook.com/fundacja.impulss">Facebook</a></p>
			<p slot="sm-@">Fundacja Impuls</p>
		</Button>
		<Button>
			<p slot="logo"><i class="fa-brands fa-x-twitter fa-2xl"></i></a></p>
			<p slot="sm-name" class="buttonp1"><a href="https://www.facebook.com/fundacja.impulss">X</a></p>
			<p slot="sm-@">@fundacjaimpuls</p>
		</Button>
		<Button>
			<p slot="logo"><a href="https://www.instagram.com/fundacjaimpuls"><i class="fa-brands fa-instagram fa-2xl"></i></a></p>
			<p slot="sm-name" class="buttonp1"><a href="https://www.instagram.com/fundacjaimpuls">Instagram</a></p>
			<p slot="sm-@">@fundacjaimpuls</p>
		</Button>
		<Button>
			<p slot="logo"><a href="https://www.tiktok.com/@fundacja.impuls?_t=8fys2ama5jn&_r=1"><i class="fa-brands fa-tiktok fa-2xl"></a></i></p>
			<p slot="sm-name" class="buttonp1"><a href="https://www.tiktok.com/@fundacja.impuls?_t=8fys2ama5jn&_r=1">TikTok</a></p>
			<p slot="sm-@">fundacja.impuls</p>
		</Button>	
	</main>
	<footer>
		<Footer />
	</footer>
	</body>
<style>
	@media screen and (min-width:1200px){
		p{
			font-size:24px;
		}
		.buttonp1{
		transform: translate(2.5rem);
		}
		main{
			width:60%;
		}
	}
	@media screen and (min-width:768px) and (max-width:1199px){
		p{
			font-size:20px;
		}
		.buttonp1{
		transform: translate(1.5rem);
		}
		main{
			width:60%;
		}
	}
	@media screen and (max-width:767px){
		p{
			font-size:18px;
		}
		.buttonp1{
		transform: translate(1rem);
		}
		main{
			width:75%;
		}
	}
	html{
		background-color: black;
		padding:0;
	}
	main{
		margin: auto;
		height:100%;
		background-color: #171717;
		padding:1rem;
	}
	p{
        font-weight: bold;
        text-align: center; 
    }
    header{
		display:block;
		margin:0;
	}
	footer{
		width:95;
	}
	a{
		text-decoration:none;
		color:white;
	}
</style>
