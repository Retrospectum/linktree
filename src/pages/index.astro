---
import "../styles/global.css";
import Head from "../components/Head.astro"
import Button from "../components/Button.astro"
---
	<head>
		<meta charset="utf-8">
		<script is:inline src="https://kit.fontawesome.com/2584faf6ae.js" crossorigin="anonymous"></script>
	</head>
	<body>
	<header>
		<Head />
	</header>
	<main>
		<Button>
			<p slot="logo"><i class="fa-brands fa-instagram fa-2xl"></i></p>
			<p slot="sm-name" class="buttonp1">Instagram</p>
			<p slot="sm-@">@fundacjaimpuls</p>
		</Button>
		<Button />
		<Button />
		<Button />
	</main>
	</body>
<style>
	@media screen and min-width(1200px){
		p{
			font-size:24px;
		}
	}
	@media screen and min-width(768px) and max-width(1199px){
		p{
			font-size:20px;
		}
	}
	@media screen and max-width(767px){
		p{
			font-size:18px;
		}
	}
	html{
		background-color: black;
	}
	main{
		margin: auto;
		width:50%;
		height:1000px;
		background-color: #171717;
		padding:1rem;
	}
	p{
        font-weight: bold;
        text-align: center; 
    }
    .buttonp1{
		transform: translate(2.5rem);
	}
</style>
